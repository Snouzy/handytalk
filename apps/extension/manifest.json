{
  "manifest_version": 3,
  "name": "Instagram Comment Generator",
  "version": "1.0",
  "description": "Generate smart Instagram comments using Claude AI",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://www.instagram.com/*", "http://localhost:3001/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["src/content.ts"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
